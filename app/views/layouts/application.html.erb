<!DOCTYPE html>
<html>
  <head>
    <title>Jukebox1806</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% unless current_user %>
    <p><%= link_to 'Sign up to be a new user', new_user_path %></p>
    <p><%= link_to 'I already have an account', login_path %></p>
    <% else %>
    <p><%= link_to 'Log out', logout_path %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
