<h1>Genre: <%= @genre.name %></h1>

<h3>Songs under this Genre: </h3>

<% @genre.songs.each do |song| %>
  <ul>
    <li><%= song.title %></li>
  </ul>
<% end %>

<% unless @genre.songs.empty? %>
  <p>Average Song Rating: <%= @genre.avg_song_rating %></p>
  <p>Song with highest rating: <%= @genre.highest_rated.title %> with a rating of <%= @genre.highest_rated.rating %></p>
  <p>Song with lowest rating: <%= @genre.lowest_rated.title %> with a rating of <%= @genre.lowest_rated.rating %></p>
<% end %>
